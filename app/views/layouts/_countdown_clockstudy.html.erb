<% if @events.count != 0 %>
  <% if (Time.current > Time.find_zone("UTC").parse(@start_timestudy) ) && (Time.current < Time.find_zone("UTC").parse(@start_timestudy) + 1.hour) %> 
    <div id="eventCurrentdiv">
      <h3><%= link_to @namestudy, event_path(@displaystudy.id), title: @descriptionstudy %></h3>  
      <p> is LIVE right NOW!</p><br>

      <%= link_to " Join Conversation ", "https://thinqtv.herokuapp.com/" + @hoststudy.permalink + "?chatrm=" + @displaystudy.topic, class: "btn btn-primary btn-lg fa fa-video-camera", style: "margin-top: 10px; margin-bottom: 10px; font-size: 30px" %>
      <br>
      Hosted by: <%= link_to @hoststudy.name, @hoststudy.permalink %>
    </div>
  <% elsif Time.current < Time.parse(@start_timestudy) %>
    <div id="clockdivstudy">
      <div>
      <span class="daystudy"></span>
      <div class="smalltext">Days</div>
      </div>
      <div>
        <span class="hourstudy"></span>
        <div class="smalltext">Hours</div>
      </div>
      <div>
        <span class="minutestudy"></span>
        <div class="smalltext">Minutes</div>
      </div>
      <div>
        <span class="secondstudy"></span>
        <div class="smalltext">Seconds</div>
      </div>
      <script>
        initializeClockstudy('clockdivstudy', '<%= @start_timestudy %>');
      </script>
    </div> 
    <div id="nextEventdiv">
      <p>Until </p><h3><%= link_to @namestudy, event_path(@displaystudy.id), title: @descriptionstudy %></h3><p> goes live!</p>
      <br>
      Hosted by: <%= link_to @hoststudy.name, @hoststudy.permalink %>
    </div>
  <% end %>
<% end %>